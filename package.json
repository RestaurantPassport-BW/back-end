  "author": "Matt Hagner <web@matthagner.com>",
  "license": "MIT",
  "dependencies": {
    "@hapi/joi": "^16.1.4",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^8.1.0",
    "express": "^4.17.1",
    "express-validator": "^6.2.0",
    "helmet": "^3.21.0",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.19.4",
    "knex-cleaner": "^1.3.0",
    "pg": "^7.12.1",
    "yup": "^0.27.0"
  },
  "devDependencies": {
    "cross-env": "^6.0.0",
    "jest": "^24.9.0",
    "nodemon": "^1.19.2",
    "sqlite3": "^4.1.0",
    "supertest": "^4.0.2"
  },
  "scripts": {
    "prod": "cross-env NODE_ENV=production node src/index.js",
    "start": "node src/index.js",
    "dev": "nodemon yarn start",
    "test": "yarn test:once --watchAll",
    "test:once": "cross-env NODE_ENV=testing PW_SALT=10 jest",
    "up:all": "npx knex migrate:up && cross-env NODE_ENV=testing npx knex migrate:up",
    "down:all": "npx knex migrate:down && cross-env NODE_ENV=testing npx knex migrate:down",
    "seed:dev": "knex seed:run",
    "seed:test": "cross-env NODE_ENV=testing knex seed:run",
    "seed:all": "yarn seed:dev && yarn seed:test"
  }
